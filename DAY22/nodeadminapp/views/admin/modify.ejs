

            <!--우측 콘텐츠 헤더영역 -->
            <div class="row wrapper border-bottom white-bg page-heading">
                <div class="col-lg-10">
                    <h2>관리자정보수정</h2>
                    <ol class="breadcrumb">
                        <li>
                            <a href="/">Home ></a>
                        </li>
                        <li>
                            <a>관리자정보수정 ></a>
                        </li>
                        <li class="active">
                            <strong>확인/수정</strong>
                        </li>
                    </ol>
                </div>
                <div class="col-lg-2">

                </div>
            </div>

            <!--우측 콘텐츠 영역 -->
            <div class="wrapper wrapper-content">
                <form action="/admin/modify/1" method="post">
                    <div class="ibox-content m-b-sm border-bottom">


                        <div class="row">
                            <div class="col-sm-4">
                                <div class="form-group">
                                    <label class="control-label">부서명</label>
                                    <select name="dept_name" id="dept_name" class="form-control">
                                        <option value="0"<% if(admin.dept_name == "0"){ %> selected <% } %>>전체</option>
                                        <option value="1"<% if(admin.dept_name == "1"){ %> selected <% } %>>연구개발</option>
                                        <option value="2"<% if(admin.dept_name == "2"){ %> selected <% } %>>인사팀</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-sm-4">
                                <div class="form-group">
                                    <label class="control-label">아이디</label>
                                    <input type="text" name="admin_id" class="form-control" value="<%=admin.admin_id%>">
                                </div>
                            </div>
    
                            <div class="col-sm-4">
                                <div class="form-group">
                                    <label class="control-label">비밀번호</label>
                                    <input type="password" name="admin_password" class="form-control" value="<%=admin.admin_password%>">
                                </div>
                            </div>
    
                        </div>
    
    
                        <div class="row">
                            <div class="col-sm-4">
                                <div class="form-group">
                                    <label class="control-label">메일주소</label>
                                    <input type="email" name="email" class="form-control" value="<%=admin.email%>">
                                </div>
                            </div>
                            <div class="col-sm-4">
                                <div class="form-group">
                                    <label class="control-label">이름</label>
                                    <input type="text" name="admin_name" class="form-control" value="<%=admin.admin_name%>">
                                </div>
                            </div>
    
                            <div class="col-sm-4">
                                <div class="form-group">
                                    <label class="control-label">전화번호</label>
                                    <input type="text" name="telephone" class="form-control" value="<%=admin.telephone%>">
                                </div>
                            </div>
    
                        </div>
    
    
                        <div class="row">
                            <div class="col-sm-4">
                                <div class="form-group">
                                    <label class="control-label">사용여부</label>
                                    <select name="used_yn_code" id="used_yn_code" class="form-control">
                                        <option value="0"<% if(admin.used_yn_code == "0"){ %> selected <% } %>>사용중</option>
                                        <option value="1"<% if(admin.used_yn_code == "1"){ %> selected <% } %>>일시중지</option>
                                        <option value="2"<% if(admin.used_yn_code == "2"){ %> selected <% } %>>탈퇴상태</option>
                                    </select>
                                </div>
                            </div>
    
                            <div class="col-sm-4">
                                <div class="form-group">
                                    <label class="control-label">등록일시</label>
                                    <input type="text" name="reg_date" class="form-control" value="<%=admin.reg_date%>">
                                </div>
                            </div>
    
                        </div>
    
    
                        <div class="text-center">
                            <button type="submit" class="btn btn-primary">수정</button>
                            <button type="submit" id="btnDelete" class="btn btn-danger">삭제</button>
                            <a href="/admin/list" class="btn btn-info">목록</a>
                        </div>
    
                    </div>
                </form>

            </div>

